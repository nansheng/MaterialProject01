<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margins"
    app:cardElevation="@dimen/card_elevation"
    app:cardMaxElevation="@dimen/card_elevation_max"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:transitionName="@string/transition_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/list_margin_max"
            android:paddingTop="@dimen/list_margin_max"
            android:paddingEnd="@dimen/list_margin_max"
            android:paddingBottom="@dimen/list_margin_min"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/list_margin_max"
            android:paddingEnd="@dimen/list_margin_max"
            android:paddingBottom="@dimen/list_margin_max"
            android:textColor="@android:color/darker_gray"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
